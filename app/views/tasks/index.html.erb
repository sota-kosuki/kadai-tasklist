<% if logged_in? %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to task.id, task %>
      :
      <%= task.status %>
      &gt;
      <%= task.content %>
      
    </li>
    <% end %>
  </ul>
  <%= link_to "新規タスク登録", new_task_path %>
  
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>Please Sign Up</h1>
      <%= link_to "Sign up now!",signup_path, class:"btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>